// @import url('https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,600;1,300&display=swap');

body
  font-size 18px

body,
.header-wrapper .title a,
.header-wrapper .header-right-wrap .nav .nav-item a,
.header-wrapper .header-right-wrap .search-box,
.mobile-header-bar,
#mobile-header .mobile-header-title .mobile-home-link,
.vuepress-blog-theme-content,
.ui-post-title,
.ui-post-title a,
h1, h2, h3, h4, h5, h6
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif !important

blockquote
  font-size: 1rem
  background-color: #e9e9e9

.post-tag
  font-size: 16px
  line-height 1.7

.ui-post-summary
  font-size: 1rem !important
  line-height 1.7

.vuepress-blog-theme-content
  padding: 0 !important
  box-shadow: none !important
  font-size: 1.2rem !important

.home .hero img
  max-width: 450px !important

#header
  position: relative !important
  width: auto !important
  box-shadow: none !important

.content-wrapper
  padding-top: 30px !important

@media (max-width: 719px)
  .content-wrapper
    padding-top: 70px !important

.social-share--header
  position: absolute !important
  right: 0
  top: -0.8rem
  @media (min-width: $MQNarrow)
    right: 0
    top: -0.8rem
  @media (max-width: $MQMobileNarrow)
    right: 0
    top: -0.8rem

.social-share--footer
  text-align: right

.search-box input
  border: 0 !important
  background-color: #e9e9e9 !important

.header-wrapper .header-right-wrap .nav .nav-item a
  font-size: 16px

.hidden
  display: none !important

@media (max-width: 719px)
  .content__default:not(.custom) > h1:first-child
    padding-top: 5rem;

.social-share-icon-svg
  position: relative
  width: 24px
  height: 24px

  svg
    opacity: 0  // hide the original Twitter icon (without removing it)

  &::before
    content: ''
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: url('/images/social-x-logo.svg') no-repeat center
    background-size: contain

.nav-link.external
  position: relative
  display: inline-flex
  align-items: center
  justify-content: center
  width: 24px
  height: 24px

  svg.feather-twitter
    opacity: 0  // hide original Twitter icon
    position: absolute
    width: 100%
    height: 100%

  &::before
    content: ''
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: url('/images/social-x-logo-white.svg') no-repeat center
    background-size: contain

.footer
  .nav-link
    color: #ffffff !important
