@import url('https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,600;1,300&display=swap');

body
  font-size 18px

body,
.header-wrapper .title a,
.header-wrapper .header-right-wrap .nav .nav-item a,
.header-wrapper .header-right-wrap .search-box,
.mobile-header-bar,
#mobile-header .mobile-header-title .mobile-home-link,
.vuepress-blog-theme-content,
.ui-post-title,
.ui-post-title a,
h1, h2, h3, h4, h5, h6
  font-family: 'Open Sans', sans-serif !important

blockquote
  background-color: #e9e9e9

p, ul, ol
  line-height 2

.post-tag
  font-size: 16px
  line-height 1.7

.vuepress-blog-theme-content
  padding: 0 !important
  box-shadow: none !important
  font-size: 18px !important

.home .hero img
  max-width: 450px !important

#header
  position: relative !important
  box-shadow: none !important

.content-wrapper
  padding-top: 60px !important

.social-share--header
  position: absolute !important
  right: 0
  top: 1.6rem
  @media (min-width: $MQNarrow)
    right: 2rem
    top: 5.5rem
  @media (max-width: $MQMobileNarrow)
    right: 1.5rem
    top: -0.8rem

.social-share--footer
  text-align: center

.search-box input
  border: 0 !important
  background-color: #e9e9e9 !important

.header-wrapper .header-right-wrap .nav .nav-item a
  font-size: 16px